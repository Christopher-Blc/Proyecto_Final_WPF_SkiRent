<Window x:Class="APIS_Test.WindowPilotos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APIS_Test"
        mc:Ignorable="d"
        Title="Pilotos"
        Height="900" Width="1500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#0B0B0D">

    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TOP BAR -->
        <Border Grid.Row="0"
                Background="#0F0F12"
                CornerRadius="18"
                BorderBrush="#2A2A2F"
                BorderThickness="1">
            <Grid Margin="16,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="42" Height="42" CornerRadius="16" Background="#D40000" Margin="0,0,12,0">
                        <TextBlock Text="🏎️" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel>
                        <TextBlock Text="Pilotos"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="White"/>
                        <TextBlock Text="Listado y detalle de competitors"
                                   FontSize="12"
                                   Foreground="#A6A6B3"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#141418" CornerRadius="12" Padding="10,6" Margin="0,0,10,0" BorderBrush="#2A2A2F" BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="#22C55E" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="online" Foreground="#EDEDED" FontSize="12" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Button x:Name="btnVolver"
                            Content="Volver"
                            Padding="14,8"
                            Background="#D40000"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- BODY -->
        <Grid Grid.Row="1" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="520"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT LIST -->
            <Border Grid.Column="0"
                    Background="#0F0F12"
                    CornerRadius="18"
                    BorderBrush="#2A2A2F"
                    BorderThickness="1"
                    Padding="16">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <Border Background="#141418"
                                CornerRadius="12"
                                BorderBrush="#2A2A2F"
                                BorderThickness="1"
                                Padding="12,8"
                                Width="360">
                            <DockPanel LastChildFill="True">
                                <TextBlock Text="🔎" Foreground="#A6A6B3" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBox x:Name="txtBuscar"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="White"
                                         FontSize="14"
                                         CaretBrush="White"
                                         VerticalContentAlignment="Center"
                                         Text=""/>
                            </DockPanel>
                        </Border>

                        <Button x:Name="btnBuscar"
                                Content="Buscar"
                                Height="40"
                                Margin="12,0,0,0"
                                Padding="18,0"
                                Background="#D40000"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"/>
                    </StackPanel>

                    <TextBlock Grid.Row="1"
                               Text="Selecciona un piloto para ver el detalle"
                               Foreground="#A6A6B3"
                               Margin="0,12,0,12"/>

                    <DataGrid Grid.Row="2"
                              x:Name="dgPilotos"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="None"
                              Background="#0F0F12"
                              Foreground="#EDEDED"
                              BorderThickness="0"
                              RowHeight="44"
                              SelectionUnit="FullRow"
                              SelectionMode="Single">

                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#0F0F12"/>
                                <Setter Property="Foreground" Value="#A6A6B3"/>
                                <Setter Property="BorderBrush" Value="#2A2A2F"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="Padding" Value="8,10"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>

                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="#0F0F12"/>
                                <Setter Property="BorderBrush" Value="#2A2A2F"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="Foreground" Value="#EDEDED"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#141418"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#220000"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>

                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="10,6"/>
                                <Setter Property="Focusable" Value="False"/>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nombre" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Nacionalidad" Binding="{Binding Nationality}" Width="200"/>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- RIGHT DETAIL -->
            <Border Grid.Column="1"
                    Margin="16,0,0,0"
                    Background="#0F0F12"
                    CornerRadius="18"
                    BorderBrush="#2A2A2F"
                    BorderThickness="1"
                    Padding="18">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <Border Width="54" Height="54" CornerRadius="20" Background="#D40000" Margin="0,0,14,0">
                            <TextBlock Text="👤" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel>
                            <TextBlock Text="{Binding ElementName=dgPilotos, Path=SelectedItem.Name}"
                                       Foreground="White"
                                       FontSize="22"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding ElementName=dgPilotos, Path=SelectedItem.Nationality}"
                                       Foreground="#A6A6B3"
                                       FontSize="12"
                                       Margin="0,3,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <Border Grid.Row="1" Background="#141418" CornerRadius="14" Padding="14" Margin="0,16,0,0" BorderBrush="#2A2A2F" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock Text="Fecha nacimiento" Foreground="#A6A6B3" FontSize="11"/>
                                <TextBlock Text="{Binding ElementName=dgPilotos, Path=SelectedItem.DateOfBirth}" Foreground="White" FontSize="14" Margin="0,6,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Número" Foreground="#A6A6B3" FontSize="11"/>
                                <TextBlock Text="{Binding ElementName=dgPilotos, Path=SelectedItem.Number}" Foreground="White" FontSize="14" Margin="0,6,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Abreviatura" Foreground="#A6A6B3" FontSize="11"/>
                                <TextBlock Text="{Binding ElementName=dgPilotos, Path=SelectedItem.Abbreviation}" Foreground="White" FontSize="14" Margin="0,6,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,16,0,0">
                        <Button x:Name="btnCargarProfile"
                                Content="Cargar profile"
                                Height="42"
                                Padding="18,0"
                                Background="#D40000"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"/>

                        <Button x:Name="btnCopiarId"
                                Content="Copiar id"
                                Height="42"
                                Margin="12,0,0,0"
                                Padding="18,0"
                                Background="#141418"
                                Foreground="White"
                                BorderBrush="#2A2A2F"
                                BorderThickness="1"
                                Cursor="Hand"/>
                    </StackPanel>

                    <Border Grid.Row="3" Background="#0B0B0D" CornerRadius="14" BorderBrush="#2A2A2F" BorderThickness="1" Padding="14" Margin="0,16,0,0">
                        <StackPanel>
                            <TextBlock Text="Detalle JSON / Bio"
                                       Foreground="#A6A6B3"
                                       FontSize="12"
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="{Binding PilotoDetalleTexto}"
                                       Foreground="#EDEDED"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
