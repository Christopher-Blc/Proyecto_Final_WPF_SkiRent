<Window x:Class="APIS_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APIS_Test"
        mc:Ignorable="d"
        Title="F1 Dashboard"
        Height="900" Width="1500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F6F8FB">

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TOP BAR -->
        <Border Grid.Row="0"
                Background="White"
                BorderBrush="#E6EAF0"
                BorderThickness="0,0,0,1">
            <Grid Margin="18,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="40" Height="40" CornerRadius="14" Background="#2563EB" Margin="0,0,12,0">
                        <TextBlock Text="F1" Foreground="White" FontWeight="Bold" FontSize="14"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel>
                        <TextBlock Text="Dashboard" FontSize="16" FontWeight="SemiBold" Foreground="#0F172A"/>
                        <TextBlock Text="Carreras · Pilotos · Circuitos · Equipos" FontSize="12" Foreground="#64748B"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#F1F5F9" CornerRadius="12" Padding="10,6" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="#22C55E" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="API conectada" Foreground="#0F172A" FontSize="12" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Button x:Name="btnSalir"
                            Content="Salir"
                            Padding="14,8"
                            Background="#0F172A"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- BODY -->
        <Grid Grid.Row="1" Margin="18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL -->
            <Border Grid.Column="0"
                    Background="White"
                    CornerRadius="18"
                    BorderBrush="#E6EAF0"
                    BorderThickness="1"
                    Padding="14">
                <StackPanel>

                    <TextBlock Text="Menú"
                               Foreground="#64748B"
                               FontSize="12"
                               Margin="2,2,0,12"/>

                    <Button x:Name="btnCarreras"
                            Content="Carreras"
                            Height="44"
                            Margin="0,0,0,10"
                            Background="#2563EB"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"/>

                    <Button x:Name="btnPilotos"
                            Content="Pilotos"
                            Height="44"
                            Margin="0,0,0,10"
                            Background="#F1F5F9"
                            Foreground="#0F172A"
                            BorderThickness="0"
                            Cursor="Hand"/>

                    <Button x:Name="btnCircuitos"
                            Content="Circuitos"
                            Height="44"
                            Margin="0,0,0,10"
                            Background="#F1F5F9"
                            Foreground="#0F172A"
                            BorderThickness="0"
                            Cursor="Hand"/>

                    <Button x:Name="btnEquipos"
                            Content="Equipos"
                            Height="44"
                            Margin="0,0,0,10"
                            Background="#F1F5F9"
                            Foreground="#0F172A"
                            BorderThickness="0"
                            Cursor="Hand"/>

                    <Border Background="#F8FAFC" CornerRadius="14" Padding="12" Margin="0,16,0,0">
                        <StackPanel>
                            <TextBlock Text="Tip" FontWeight="SemiBold" Foreground="#0F172A"/>
                            <TextBlock Text="Empieza por Carreras para obtener eventos, circuitos y participantes."
                                       Foreground="#64748B"
                                       TextWrapping="Wrap"
                                       Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </Border>

            <!-- RIGHT CONTENT -->
            <Border Grid.Column="1"
                    Margin="16,0,0,0"
                    Background="White"
                    CornerRadius="18"
                    BorderBrush="#E6EAF0"
                    BorderThickness="1"
                    Padding="18">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Bienvenido"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#0F172A"/>

                        <Border Background="#EEF2FF" CornerRadius="12" Padding="10,6" Margin="12,0,0,0">
                            <TextBlock Text="Sportradar Formula 1"
                                       Foreground="#1D4ED8"
                                       FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>

                    <TextBlock Grid.Row="1"
                               Text="Elige una sección en el menú de la izquierda para ver el listado y el detalle."
                               Foreground="#64748B"
                               Margin="0,10,0,14"/>

                    <UniformGrid Grid.Row="2" Columns="2" Rows="2" Margin="0,6,0,0">
                        <!-- Carreras -->
                        <Border Background="#F8FAFC" CornerRadius="18" Margin="8" Padding="16" BorderBrush="#E6EAF0" BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Orientation="Horizontal">
                                    <Border Width="36" Height="36" CornerRadius="14" Background="#2563EB" Margin="0,0,12,0">
                                        <TextBlock Text="🏁" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <StackPanel>
                                        <TextBlock Text="Carreras" FontSize="16" FontWeight="SemiBold" Foreground="#0F172A"/>
                                        <TextBlock Text="Calendario, horarios y resultados"
                                                   Foreground="#64748B" FontSize="12"/>
                                    </StackPanel>
                                </StackPanel>

                                <TextBlock Grid.Row="1"
                                           Text="Listado de eventos por temporada y detalle de cada carrera."
                                           Foreground="#64748B"
                                           Margin="0,12,0,14"
                                           TextWrapping="Wrap"/>

                                <Button Grid.Row="2"
                                        Content="Abrir Carreras"
                                        Height="40"
                                        Background="#0F172A"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"/>
                            </Grid>
                        </Border>

                        <!-- Pilotos -->
                        <Border Background="#F8FAFC" CornerRadius="18" Margin="8" Padding="16" BorderBrush="#E6EAF0" BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Orientation="Horizontal">
                                    <Border Width="36" Height="36" CornerRadius="14" Background="#22C55E" Margin="0,0,12,0">
                                        <TextBlock Text="👤" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <StackPanel>
                                        <TextBlock Text="Pilotos" FontSize="16" FontWeight="SemiBold" Foreground="#0F172A"/>
                                        <TextBlock Text="Perfiles y estadísticas"
                                                   Foreground="#64748B" FontSize="12"/>
                                    </StackPanel>
                                </StackPanel>

                                <TextBlock Grid.Row="1"
                                           Text="Listado de pilotos y acceso al profile de cada competitor."
                                           Foreground="#64748B"
                                           Margin="0,12,0,14"
                                           TextWrapping="Wrap"/>

                                <Button Grid.Row="2"
                                        Content="Abrir Pilotos"
                                        Height="40"
                                        Background="#0F172A"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"/>
                            </Grid>
                        </Border>

                        <!-- Circuitos -->
                        <Border Background="#F8FAFC" CornerRadius="18" Margin="8" Padding="16" BorderBrush="#E6EAF0" BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Orientation="Horizontal">
                                    <Border Width="36" Height="36" CornerRadius="14" Background="#F59E0B" Margin="0,0,12,0">
                                        <TextBlock Text="🗺️" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <StackPanel>
                                        <TextBlock Text="Circuitos" FontSize="16" FontWeight="SemiBold" Foreground="#0F172A"/>
                                        <TextBlock Text="Ubicación y datos del circuito"
                                                   Foreground="#64748B" FontSize="12"/>
                                    </StackPanel>
                                </StackPanel>

                                <TextBlock Grid.Row="1"
                                           Text="Circuitos a partir de los stages y detalles del evento."
                                           Foreground="#64748B"
                                           Margin="0,12,0,14"
                                           TextWrapping="Wrap"/>

                                <Button Grid.Row="2"
                                        Content="Abrir Circuitos"
                                        Height="40"
                                        Background="#0F172A"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"/>
                            </Grid>
                        </Border>

                        <!-- Equipos -->
                        <Border Background="#F8FAFC" CornerRadius="18" Margin="8" Padding="16" BorderBrush="#E6EAF0" BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Orientation="Horizontal">
                                    <Border Width="36" Height="36" CornerRadius="14" Background="#A855F7" Margin="0,0,12,0">
                                        <TextBlock Text="🏎️" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <StackPanel>
                                        <TextBlock Text="Equipos" FontSize="16" FontWeight="SemiBold" Foreground="#0F172A"/>
                                        <TextBlock Text="Teams y plantillas"
                                                   Foreground="#64748B" FontSize="12"/>
                                    </StackPanel>
                                </StackPanel>

                                <TextBlock Grid.Row="1"
                                           Text="Listado de equipos y acceso al profile de cada team."
                                           Foreground="#64748B"
                                           Margin="0,12,0,14"
                                           TextWrapping="Wrap"/>

                                <Button Grid.Row="2"
                                        Content="Abrir Equipos"
                                        Height="40"
                                        Background="#0F172A"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"/>
                            </Grid>
                        </Border>
                    </UniformGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
