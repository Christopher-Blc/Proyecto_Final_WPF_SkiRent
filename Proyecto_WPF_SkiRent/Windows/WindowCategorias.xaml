<Window x:Class="Proyecto_WPF_SkiRent.WindowCategorias"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Categorías"
        Height="900"
        Width="1500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F6F8FB">

    <DockPanel LastChildFill="True" Background="#FFB0E4FF">

        <Border DockPanel.Dock="Top"
                Height="70"
                Background="#FF001B8A"
                BorderBrush="#E6EAF0"
                BorderThickness="0,0,0,1">

            <DockPanel Margin="18,0">
                <Button x:Name="btnSalir"
                        DockPanel.Dock="Right"
                        Height="40"
                        Padding="14,0"
                        Background="#0F172A"
                        Foreground="White"
                        BorderBrush="#0F172A"
                        Content="Salir"
                        Click="btnSalir_Click"/>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="38" Height="38">
                        <Border.Background>
                            <ImageBrush ImageSource="/Windows/LogoSkiRent.png" Stretch="Fill"/>
                        </Border.Background>
                    </Border>

                    <StackPanel Margin="12,0,0,0">
                        <TextBlock Text="Categorías" Foreground="White" FontSize="18" FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>
            </DockPanel>
        </Border>

        <Border DockPanel.Dock="Left"
                Width="240"
                Background="#FF001B8A"
                BorderBrush="#E6EAF0"
                BorderThickness="0,0,1,0">

            <StackPanel Margin="10,20,10,20">
                <Border Height="48" Margin="0,0,0,8" CornerRadius="6">
                    <Button x:Name="btnDashboard"
                            Content="🏠 Inicio"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="12,0"
                            HorizontalContentAlignment="Left"
                            Click="btnDashboard_Click"
                            Foreground="White"/>
                </Border>

                <Border Height="48" Margin="0,0,0,8" CornerRadius="6">
                    <Button x:Name="btnClientesNav"
                            Content="👤 Clientes"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="12,0"
                            HorizontalContentAlignment="Left"
                            Click="btnClientesNav_Click"
                            Foreground="White"/>
                </Border>

                <Border Height="48" Margin="0,0,0,8" CornerRadius="6">
                    <Button x:Name="btnMaterialesNav"
                            Content="🎿 Material"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="12,0"
                            HorizontalContentAlignment="Left"
                            Click="btnMaterialesNav_Click"
                            Foreground="White"/>
                </Border>

                <Border Height="48" Margin="0,0,0,8" CornerRadius="6">
                    <Button x:Name="btnCategoriasNav"
                            Content="🏷️ Categorías"
                            BorderThickness="0,0,0,4"
                            BorderBrush="AliceBlue"
                            FontWeight="SemiBold"
                            Padding="12,0"
                            HorizontalContentAlignment="Left"
                            Foreground="White"
                            IsEnabled="True">
                        <Button.Background>
                            <SolidColorBrush Color="#FF4875FF" Opacity="0.3"/>
                        </Button.Background>
                    </Button>
                </Border>

                <Border Height="48" CornerRadius="6">
                    <Button x:Name="btnAlquileresNav"
                            Content="🧾 Alquileres"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="12,0"
                            HorizontalContentAlignment="Left"
                            Click="btnAlquileresNav_Click"
                            Foreground="White"/>
                </Border>
            </StackPanel>
        </Border>

        <DockPanel Margin="24">
            <Border Background="White"
                    CornerRadius="12"
                    BorderBrush="#E6EAF0"
                    BorderThickness="1"
                    Padding="14">

                <DockPanel LastChildFill="True">

                    <WrapPanel DockPanel.Dock="Top" Margin="0,0,0,14">

                        <Button x:Name="btnAnyadir"
                                Content="Añadir"
                                Height="36"
                                Padding="14,0"
                                Background="#2563EB"
                                Foreground="White"
                                BorderBrush="#2563EB"
                                Margin="0,0,10,0"
                                Click="btnAnyadir_Click"/>

                        <Button x:Name="btnEditar"
                                Content="Editar"
                                Height="36"
                                Padding="14,0"
                                Background="#F1F5F9"
                                Foreground="#0F172A"
                                BorderBrush="#E2E8F0"
                                Margin="0,0,10,0"
                                Click="btnEditar_Click"/>

                        <Button x:Name="btnEliminar"
                                Content="Eliminar"
                                Height="36"
                                Padding="14,0"
                                Background="#FEE2E2"
                                Foreground="#991B1B"
                                BorderBrush="#FECACA"
                                Margin="0,0,10,0"
                                Click="btnEliminar_Click"/>

                        <Button x:Name="btnLimpiar"
                                Content="Limpiar"
                                Height="36"
                                Padding="14,0"
                                Background="#FFA5C2FF"
                                Foreground="White"
                                BorderBrush="#FFBAD0FF"
                                Margin="0,0,10,0"
                                Click="btnLimpiar_Click"/>

                        <TextBlock Text="Buscar:"
                                   FontSize="18"
                                   Foreground="#505050"
                                   VerticalAlignment="Center"
                                   Margin="10,0"/>

                        <TextBox x:Name="txtBuscar"
                                 Width="200"
                                 Margin="6,0"
                                 FontFamily="Arial"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"/>

                        <Button x:Name="btnBuscar"
                                Content="Buscar"
                                Height="36"
                                Padding="14,0"
                                Background="#2563EB"
                                Foreground="White"
                                BorderBrush="#2563EB"
                                Click="btnBuscar_Click"/>
                    </WrapPanel>

                    <WrapPanel DockPanel.Dock="Top" Margin="0,0,0,16">
                        <StackPanel Width="256" Margin="0,0,25,12">
                            <TextBlock Text="Nombre de categoría" Foreground="#64748B" FontSize="12" Margin="0,0,0,6"/>
                            <TextBox x:Name="txtNombreCategoria" Height="34" FontFamily="Arial" FontSize="18" Width="250" VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Width="260" Margin="0,0,14,12">
                            <TextBlock Text="Nivel" Foreground="#64748B" FontSize="12" Margin="0,0,0,6"/>
                            <ComboBox x:Name="cmbNivel" Height="34" VerticalContentAlignment="Center"/>
                        </StackPanel>
                    </WrapPanel>

                    <DataGrid x:Name="dgCategorias"
                       AutoGenerateColumns="True"
                       CanUserAddRows="False"
                       IsReadOnly="True"
                       SelectionMode="Single"
                       SelectionChanged="dgCategorias_SelectionChanged"
                       CanUserResizeColumns="False"
                       GridLinesVisibility="None"
                       BorderThickness="0"
                       RowHeight="36"
                       ColumnHeaderHeight="38"
                       AlternatingRowBackground="#F8FAFC" 
                       FontFamily="Segoe UI"
                       FontSize="14"
                       Foreground="#0F172A" 
                       ColumnWidth="*"
                       HeadersVisibility="Column" Height="551"/>
                </DockPanel>
            </Border>
        </DockPanel>

    </DockPanel>
</Window>
