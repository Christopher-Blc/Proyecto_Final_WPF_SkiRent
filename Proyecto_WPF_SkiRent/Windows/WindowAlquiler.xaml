<Window x:Class="Proyecto_WPF_SkiRent.WindowAlquiler"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Alquileres"
        Height="900"
        Width="1500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F6F8FB">

    <DockPanel LastChildFill="True" Background="#FFB0E4FF">


        <Border DockPanel.Dock="Top"
                Height="70"
                Background="#FF001B8A"
                BorderBrush="#E6EAF0"
                BorderThickness="0,0,0,1">
            <DockPanel Margin="18,0">
                <Button x:Name="btnSalir" DockPanel.Dock="Right"
                        Height="40" Padding="14,0"
                        Background="#0F172A" Foreground="White" BorderBrush="#0F172A"
                        Content="Salir" Click="btnSalir_Click"/>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="38" Height="38">
                        <Border.Background>
                            <ImageBrush ImageSource="/Windows/LogoSkiRent.png" Stretch="Fill"/>
                        </Border.Background>
                    </Border>
                    <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Alquileres" Foreground="White" FontSize="18" FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>
            </DockPanel>
        </Border>


        <Border DockPanel.Dock="Left"
                Width="240"
                Background="#FF001B8A"
                BorderBrush="#E6EAF0"
                BorderThickness="0,0,1,0">
            <StackPanel Margin="10,20,10,20">
                <Border Height="48" Margin="0,0,0,8" CornerRadius="6">
                    <Button x:Name="btnDashboard" Content="🏠  Inicio"
                            Background="Transparent" BorderThickness="0"
                            Foreground="White" Padding="12,0"
                            HorizontalContentAlignment="Left" Click="btnDashboard_Click"/>
                </Border>

                <Border Height="48" Margin="0,0,0,8" CornerRadius="6">
                    <Button x:Name="btnClientesNav" Content="👤  Clientes"
                            Background="Transparent" BorderThickness="0"
                            Foreground="White" Padding="12,0"
                            HorizontalContentAlignment="Left" Click="btnClientesNav_Click"/>
                </Border>

                <Border Height="48" Margin="0,0,0,8" CornerRadius="6">
                    <Button x:Name="btnMaterialesNav" Content="🎿  Material"
                            Background="Transparent" BorderThickness="0"
                            Foreground="White" Padding="12,0"
                            HorizontalContentAlignment="Left" Click="btnMaterialesNav_Click"/>
                </Border>

                <Border Height="48" Margin="0,0,0,8" CornerRadius="6">
                    <Button x:Name="btnCategoriasNav" Content="🏷️  Categorías"
                            Background="Transparent" BorderThickness="0"
                            Foreground="White" Padding="12,0"
                            HorizontalContentAlignment="Left" Click="btnCategoriasNav_Click"/>
                </Border>

                <Border Height="48" Margin="0,0,0,8" CornerRadius="6">
                    <Button x:Name="btnAlquileresNav"
                        Content="🧾  Alquileres"
                        BorderThickness="0,0,0,4"
                        BorderBrush="AliceBlue"
                        FontWeight="SemiBold"
                        Padding="12,0"
                        HorizontalContentAlignment="Left"
                        Foreground="White"
                        IsEnabled="True">
                        <Button.Background>
                            <SolidColorBrush Color="#FF4875FF" Opacity="0.3"/>
                        </Button.Background>
                    </Button>
                </Border>
            </StackPanel>
        </Border>


        <Grid Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="420"/>
            </Grid.ColumnDefinitions>


            <Border Grid.Column="0"
                    Background="White"
                    CornerRadius="12"
                    BorderBrush="#E6EAF0"
                    BorderThickness="1"
                    Padding="14"
                    Margin="0,0,112,0">
                <StackPanel>


                    <WrapPanel Margin="0,0,0,12">
                        <Button x:Name="btnAnyadir" Content="Añadir"
                                Height="36" Padding="14,0"
                                Background="#2563EB" Foreground="White" BorderBrush="#2563EB"
                                Margin="0,0,10,0" Click="btnAnyadir_Click"/>
                        <Button x:Name="btnEditar" Content="Editar"
                                Height="36" Padding="14,0"
                                Background="#F1F5F9" Foreground="#0F172A" BorderBrush="#E2E8F0"
                                Margin="0,0,10,0" Click="btnEditar_Click"/>
                        <Button x:Name="btnEliminar" Content="Eliminar"
                                Height="36" Padding="14,0"
                                Background="#FEE2E2" Foreground="#991B1B" BorderBrush="#FECACA"
                                Margin="0,0,10,0" Click="btnEliminar_Click"/>
                        <Button x:Name="btnLimpiar" Content="Limpiar"
                                Height="36" Padding="14,0"
                                Background="#FFA5C2FF" Foreground="White"
                                BorderBrush="#FFBAD0FF"
                                Margin="0,0,10,0" Click="btnLimpiar_Click" VerticalAlignment="Center"/>

                        <TextBox x:Name="txtBuscarId"
                                 Width="240"
                                 Height="36"
                                 Margin="6,0"
                                 FontFamily="Arial"
                                 FontSize="12"
                                 VerticalContentAlignment="Center"
                                 Text="Buscar por Cliente..." />
                        <Button x:Name="btnBuscar" Content="Buscar"
                                Height="36" Padding="14,0"
                                Background="#2563EB" Foreground="White" BorderBrush="#2563EB" Click="btnBuscar_Click"/>
                    </WrapPanel>


                    <StackPanel Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <StackPanel Margin="0,0,40,0">
                                <TextBlock Text="Cliente" Foreground="#64748B" FontSize="12" Margin="0,0,0,6"/>
                                <ComboBox x:Name="cmbCodigo" Width="220" Height="34" Padding="10,0" VerticalAlignment="Center"
                                          FontFamily="Arial" FontSize="18" VerticalContentAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,40,0">
                                <TextBlock Text="Fecha inicio" Foreground="#64748B" FontSize="12" Margin="0,0,0,6"/>
                                <DatePicker x:Name="dtpInicio" Height="34" Width="153" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Fecha fin" Foreground="#64748B" FontSize="12" Margin="0,0,0,6"/>
                                <DatePicker x:Name="dtpFin" Height="34" Width="155" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <StackPanel Margin="0,0,40,0">
                                <TextBlock Text="Precio total" Foreground="#64748B" FontSize="12" Margin="0,0,0,6"/>
                                <TextBox x:Name="txtPrecioTotal" Width="180" Height="34" Padding="10,0" IsReadOnly="True"
                                         FontFamily="Arial" FontSize="18" VerticalContentAlignment="Center"/>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Estado" Foreground="#64748B" FontSize="12" Margin="0,0,0,6"/>
                                <ComboBox x:Name="cmbEstado" Width="180" Height="34" Padding="10,0" VerticalAlignment="Center"
                                          FontFamily="Arial" FontSize="18" VerticalContentAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <Border Background="White" BorderThickness="0">
                        <DataGrid x:Name="dgAlquileres"
                          AutoGenerateColumns="True"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          SelectionChanged="dgAlquileres_SelectionChanged"
                          CanUserResizeColumns="False"
                          GridLinesVisibility="None"
                          BorderThickness="0"
                          RowHeight="36"
                          ColumnHeaderHeight="38"
                          AlternatingRowBackground="#F8FAFC"
                          FontFamily="Segoe UI"
                          FontSize="14"
                          Foreground="#0F172A"
                          ColumnWidth="*"
                          HeadersVisibility="Column" Height="551" Width="646"/>
                    </Border>
                </StackPanel>
            </Border>

            <Border
                    Background="White"
                    CornerRadius="12"
                    BorderBrush="#E6EAF0"
                    BorderThickness="1"
                    Padding="14" Margin="689,0,0,0" Grid.ColumnSpan="2">
                <StackPanel>

                    <TextBlock Text="Productos del alquiler" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <StackPanel Margin="0,0,12,0">
                            <TextBlock Text="Material" Foreground="#64748B" FontSize="12"/>
                            <ComboBox x:Name="cmbMaterialAlquiler" Width="200" Height="34" FontFamily="Arial" FontSize="18" VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,12,0">
                            <TextBlock Text="Cantidad" Foreground="#64748B" FontSize="12"/>
                            <ComboBox x:Name="cmbCantidad" Width="100" Height="34" FontFamily="Arial" FontSize="18" VerticalContentAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Button x:Name="btnAgregarProducto" Content="Añadir producto al alquiler"
                                Background="#2563EB" Foreground="White" BorderBrush="#2563EB"
                                Padding="12,6" Margin="0,0,8,0" Click="btnAgregarProducto_Click"/>
                        <Button x:Name="btnQuitarProducto" Content="Quitar producto al alquiler"
                                Background="#FFF5F5" Foreground="#991B1B" BorderBrush="#FECACA"
                                Padding="12,6" Click="btnQuitarProducto_Click"/>
                    </StackPanel>

                    <DataGrid x:Name="dgProductosAlquiler"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          SelectionChanged="dgProductosAlquiler_SelectionChanged"
                          CanUserResizeColumns="False"
                          GridLinesVisibility="None"
                          BorderThickness="0"
                          RowHeight="36"
                          ColumnHeaderHeight="38"
                          AlternatingRowBackground="#F8FAFC"
                          FontFamily="Segoe UI"
                          FontSize="14"
                          Foreground="#0F172A"
                          HeadersVisibility="Column" Height="551">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Código" Binding="{Binding Material.Codigo}" Width="1.5*" />
                            <DataGridTextColumn Header="Marca" Binding="{Binding Material.Marca}" Width="1*" />
                            <DataGridTextColumn Header="Modelo" Binding="{Binding Material.Modelo}" Width="1.5*" />
                            <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="80" />
                            <DataGridTextColumn Header="Días" Binding="{Binding Dias}" Width="80" />
                            <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=0.00}" Width="100" />

                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>