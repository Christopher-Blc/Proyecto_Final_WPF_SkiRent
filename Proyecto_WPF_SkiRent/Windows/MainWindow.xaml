<Window x:Class="Proyecto_WPF_SkiRent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SkiRent"
        Height="900"
        Width="1500"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        ResizeMode="NoResize"
        Background="#F6F8FB">

    <DockPanel LastChildFill="True" Background="#FFB0E4FF">

        <Border DockPanel.Dock="Top" Height="70"
                Background="#FF001B8A" BorderBrush="#E6EAF0" BorderThickness="0,0,0,1">
            <DockPanel Margin="18,0">

                <Button x:Name="btnSalir" DockPanel.Dock="Right"
                        Height="40" Padding="14,0"
                        Background="#0F172A" Foreground="White" BorderBrush="#0F172A"
                        Content="Salir" />

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="38" Height="38">
                        <Border.Background>
                            <ImageBrush ImageSource="/Windows/LogoSkiRent.png" Stretch="Fill" TileMode="Tile"/>
                        </Border.Background>
                    </Border>

                    <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="SkiRent" Foreground="White" FontSize="18" FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>

            </DockPanel>
        </Border>

        <Border DockPanel.Dock="Left" Width="240"
                Background="#FF001B8A" BorderBrush="#E6EAF0" BorderThickness="0,0,1,0">

            <StackPanel Margin="10,20,10,20">

                <Border Height="48" Margin="0,0,0,8" CornerRadius="6">
                    <Button x:Name="btnDashboardNav"
                            Content="🏠 Inicio"
                            BorderThickness="0,0,0,4"
                            BorderBrush="AliceBlue"
                            FontWeight="SemiBold"
                            Padding="12,0"
                            HorizontalContentAlignment="Left"
                            Foreground="White"
                            IsEnabled="True">
                        <Button.Background>
                            <SolidColorBrush Color="#FF4875FF" Opacity="0.3"/>
                        </Button.Background>
                    </Button>
                </Border>

                <Border Height="48" Margin="0,0,0,8" CornerRadius="6">
                    <Button x:Name="btnClientes"
                            Content="👤  Clientes"
                            Background="Transparent" BorderThickness="0"
                            Foreground="White" Padding="12,0"
                            HorizontalContentAlignment="Left" Click="btnClientes_Click"/>
                </Border>

                <Border Height="48" Margin="0,0,0,8" CornerRadius="6">
                    <Button x:Name="btnMateriales"
                            Content="🎿  Material"
                            Background="Transparent" BorderThickness="0"
                            Foreground="White" Padding="12,0"
                            HorizontalContentAlignment="Left" Click="btnMateriales_Click"/>
                </Border>

                <Border Height="48" Margin="0,0,0,8" CornerRadius="6">
                    <Button x:Name="btnCategorias"
                            Content="🏷️  Categorías"
                            Background="Transparent" BorderThickness="0"
                            Foreground="White" Padding="12,0"
                            HorizontalContentAlignment="Left" Click="btnCategorias_Click"/>
                </Border>

                <Border Height="48" CornerRadius="6"  Margin="0,0,0,120">
                    <Button x:Name="btnAlquileres"
                            Content="🧾  Alquileres"
                            Background="Transparent" BorderThickness="0"
                            Foreground="White" Padding="12,0"
                            HorizontalContentAlignment="Left" Click="btnAlquileres_Click"/>
                </Border>

                <TextBlock Text="Informes" FontFamily="Arial" Foreground="#FFADADAD" FontSize="16" Margin="0,0,0,4"/>
                <Separator></Separator>
                <Border Height="48" CornerRadius="6"  Margin="0,0,0,0">
                    <Button x:Name="btnInformeMaterial"
                        Content="→ Material"
                        Background="Transparent" BorderThickness="0"
                        Foreground="White" Padding="12,0"
                        HorizontalContentAlignment="Left" Click="btnInformeMaterial_Click"/> 
                </Border>

                <Border Height="48" CornerRadius="6"  Margin="0,0,0,0">
                    <Button x:Name="btnInformAlquileres"
                        Content="→ Alquileres"
                        Background="Transparent" BorderThickness="0"
                        Foreground="White" Padding="12,0"
                        HorizontalContentAlignment="Left" Click="btnInformAlquileres_Click"/>
                </Border>

                <Border Height="48" CornerRadius="6"  Margin="0,0,0,0">
                    <Button x:Name="btnInformeMaterialEstado"
                        Content="→ Material Estado"
                        Background="Transparent" BorderThickness="0"
                        Foreground="White" Padding="12,0"
                        HorizontalContentAlignment="Left" Click="btnInformeMaterialEstado_Click"/>
                </Border>

            </StackPanel>
        </Border>

        <Grid Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="48*"/>
                <ColumnDefinition Width="1121*"/>
                <ColumnDefinition Width="43*"/>
            </Grid.ColumnDefinitions>

            <Border HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" Background="Transparent" Grid.Column="1" Height="220" Width="1116">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">

                    <Border Background="White" CornerRadius="16"
                            BorderBrush="#E6EAF0" BorderThickness="1"
                            Padding="20" Height="174" Width="360"
                            Margin="0,0,18,0">

                        <StackPanel>
                            <TextBlock Text="Total Clientes" Foreground="#64748B" FontSize="12"/>
                            <TextBlock x:Name="txtTotalClientes" Text="0"
                                       Foreground="#0F172A" FontSize="38"
                                       FontWeight="SemiBold" Margin="0,10,0,0"/>
                        </StackPanel>

                    </Border>

                    <Border Background="White" CornerRadius="16"
                            BorderBrush="#E6EAF0" BorderThickness="1"
                            Padding="20" Height="174" Width="360"
                            Margin="0,0,18,0">

                        <StackPanel>
                            <TextBlock Text="Total material" Foreground="#64748B" FontSize="12"/>
                            <TextBlock x:Name="txtTotalMaterial" Text="0"
                                       Foreground="#0F172A" FontSize="38"
                                       FontWeight="SemiBold" Margin="0,10,0,0"/>
                        </StackPanel>

                    </Border>

                    <Border Background="White" CornerRadius="16"
                            BorderBrush="#E6EAF0" BorderThickness="1"
                            Padding="20" Height="174" Width="360">

                        <StackPanel>
                            <TextBlock Text="Alquileres activos" Foreground="#64748B" FontSize="12"/>
                            <TextBlock x:Name="txtAlquileresActivos" Text="0"
                                       Foreground="#0F172A" FontSize="38"
                                       FontWeight="SemiBold" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </Border>

            <Border BorderThickness="1" Margin="0,216,3,65" Grid.Column="1" CornerRadius="13,13,13,13">
                <Border.Background>
                    <ImageBrush ImageSource="/Windows/SkiRent (1).png" Stretch="UniformToFill" Opacity="0.95"/>
                </Border.Background>
            </Border>

        </Grid>

    </DockPanel>
</Window>
